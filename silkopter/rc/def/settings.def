// Settings

struct Settings
{
    struct Input
    {
        struct Sticks_Calibration
        {
            float yaw_min = 0.f;
            float yaw_center = 0.5f;
            float yaw_deadband = 0.f;
            float yaw_max = 1.f;
            float pitch_min = 0.f;
            float pitch_center = 0.5f;
            float pitch_deadband = 0.f;
            float pitch_max = 1.f;
            float roll_min = 0.f;
            float roll_center = 0.5f;
            float roll_deadband = 0.f;
            float roll_max = 1.f;
            float throttle_min = 0.f;
            float throttle_center = 0.5f;
            float throttle_deadband = 0.f;
            float throttle_max = 1.f;
        };

        Sticks_Calibration sticks_calibration;
    };

    Input input;

    struct HW
    {
    	alias pigpio_period_us_t = uint32_t : [ min = 1, max = 10 ];
    	pigpio_period_us_t pigpio_period_us = 1;

    	uint32_t display_incremental_step_us = 1000;
    };

    HW hw;

    struct Comms
    {
    	vector<string> video_wlan_interfaces;
    	uint32_t video_fec_coding_k = 12;
    	uint32_t video_fec_coding_n = 20;
    	uint32_t video_max_latency_ms = 500;
    	uint32_t video_reset_duration_ms = 1000;

    	gpio_t rc_sdn_gpio = 6;
    	gpio_t rc_nirq_gpio = 26;
    	string rc_spi_device = "/dev/spidev0.0";
    	uint32_t rc_spi_speed = 16000000;

        float rc_center_frequency = 433.5f;
        float rc_xtal_adjustment = 0.f;
    };

    Comms comms;

    struct Battery_Info
    {
    	float low_voltage = 7.f;
    	float critical_voltage = 6.f;
    	float calibration_bias = 0.f;
    	float calibration_scale = 1.f;
    };

    Battery_Info battery_info;
};

